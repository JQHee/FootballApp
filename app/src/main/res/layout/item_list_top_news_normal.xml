<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/widget_size_10"
    android:paddingLeft="@dimen/widget_size_10"
    android:paddingRight="@dimen/widget_size_10"
    android:paddingTop="@dimen/widget_size_10">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingRight="@dimen/widget_size_10">

        <TextView
            android:id="@+id/tv_normal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/tv_normal_hotnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:singleLine="true"
            android:textSize="@dimen/font_size_12" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_normal_pic"
        android:layout_width="@dimen/widget_size_100"
        android:layout_height="@dimen/widget_size_50"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default" />


</LinearLayout>